b\u4ea1\u7387\u3092\u9ad8\u3081\u308b\u3053\u3068\u304c\u3067\u304d\u307e\u3059\u304b\uff1f\u77e2\u5370\u306b\u306f\u9593\u9055\u3044\u306a\u304f\u6700\u3082\u7c21\u5358\u306a\u65b9\u6cd5\u3067\u3059\u3002 \"\u4e09\u56fd\u5fd7\u306e\u30ed\u30de\u30f3\u30b9\"\u306e\u53cb\u4eba\u306f\u3001\u3053\u306e\u5bb9\u7591\u3067\u9aa8\u6bd2\u3092\u63bb\u304f\u3053\u3068\u3092\u77e5\u3063\u3066\u3044\u306a\u3051\u308c\u3070\u306a\u3089\u306a\u3044\u3001Guan Yu\u306e\u6b74\u53f2\u306f\u672c\u5f53\u306b\u6709\u6bd2\u306a\u77e2\u3067\u3042\u308b\u304c\u3001\u5f7c\u306f\u5f7c\u306e\u83ef\u306f\u6cbb\u7652\u3057\u3066\u3044\u306a\u3044\u304c\u3001Shu\u8ecd\u533b\u3002\u3053\u308c\u306f\u307e\u305f\u3001\u53e4\u4ee3\u306b\u72b6\u6cc1\u304c\u767a\u751f\u3057\u305f\u3068\u304d\u306b\u6709\u6bd2\u306a\u77e2\u304c\u5b9f\u969b\u306b\u4f7f\u7528\u3055\u308c\u3066\u3044\u308b\u3053\u3068\u3092\u793a\u3057\u3066\u3044\u307e\u3059\u3002</p><img src=\"http://p9.pstatp.com/large/3e640002d614c1d020e6\" img_width=\"900\" img_height=\"600\" alt=\"\u53e4\u4ee3\u5f13\u7bad\u5175\u4e3a\u4ec0\u4e48\u5f88\u5c11\u7528\u6bd2\u7bad\uff1f\u539f\u56e0\u5176\u5b9e\u5f88\u7b80\u5355\" inline=\"0\"><p>\u6709\u6bd2\u306a\u77e2\u5370\u304c\u52b9\u679c\u7684\u306a\u306e\u3067\u3001\u56de\u5fa9\u3059\u308b\u305f\u3081\u306b\u9aa8\u306e\u6cbb\u7652\u3092\u63bb\u722c\u3059\u308b\u5fc5\u8981\u6027\u306e\u5f8c\u306b\u5de6\u8155\u306b\u6483\u305f\u308c\u305f\u3001\u306a\u305c\u4eba\u3005\u306f\u305d\u308c\u306e\u5927\u898f\u6a21\u306a\u4f7f\u7528\u3092\u4f7f\u7528\u3057\u3066\u3044\u306a\u3044\u306e\u3067\u3059\u304b\uff1f</p><p>\u79c1\u305f\u3061\u306f\u307e\u305aGuan Yu\u3092\u898b\u3066\u3001\u3069\u3093\u306a\u6709\u6bd2\u306a\u77e2\u3067\u3059\u304b\uff1f\u6b74\u53f2\u7684\u306a\u8a18\u9332\u306b\u3088\u308c\u3070\u3001\u6709\u6bd2\u306a\u77e2\u3084\u5317\u90e8\u306e\u904a\u7267\u6c11\u306e\u6700\u3082\u65e9\u3044\u4f7f\u7528\u3001\u3059\u306a\u308f\u3061\u3001\u77e2\u5370\u7fa4\u306b\u5857\u5e03\u3055\u308c\u305f\u30b8\u30e5\u30fc\u30b9\u304b\u3089\u62bd\u51fa\u3055\u308c\u305f\u30a2\u30b3\u30cb\u30c3\u30c8\u6839\u3068\u547c\u3070\u308c\u308b\u690d\u7269\u3002\u3053\u306e\u7a2e\u306e\u6bd2\u306f\u3001\u200b\u200b\u52b9\u679c\u304c\u9045\u3044\u3068\u3044\u3046\u7279\u5fb4\u304c\u3042\u308a\u3001\u6bce\u65e5\u3057\u304b\u81f4\u547d\u7684\u3067\u306f\u3042\u308a\u307e\u305b\u3093\u3002</p><p>\"\u4e09\u56fd\u5fd7\"\u306f\u3001Guan Yu\u304c\u6226\u4e89\u306e\u6709\u6bd2\u306a\u77e2\u3001\u3042\u3089\u3086\u308b\u96e8\u3001\u3057\u3070\u3057\u3070\u75db\u307f\u3001\u305d\u3057\u3066\u5f8c\u306b\u8ecd\u4e8b\u7684\u6cbb\u7642\u3092\u898b\u3064\u3051\u308b\u5e74\u304c\u4f55\u5e74\u304b\u5206\u304b\u3089\u306a\u304b\u3063\u305f\u3053\u3068\u3092\u8a18\u9332\u3057\u3066\u3044\u307e\u3059\u3002\u660e\u3089\u304b\u306b\u3001\u5f7c\u306e\u6bd2\u306f\u30a2\u30b3\u30ca\u30a4\u30c8\u306b\u4f3c\u3066\u3044\u308b\u3079\u304d\u3067\u3042\u308a\u3001\u6162\u6027\u6bd2\u3067\u3042\u308a\u3001\u6b7b\u306b\u81f3\u308b\u3082\u306e\u3067\u306f\u306a\u3044\u3002</p><p>\u306a\u305c\u6162\u6027\u6bd2\u3092\u4f7f\u3046\u306e\u3067\u3059\u304b\uff1f\u5263\u306e\u5589\u3067\u5927\u4e08\u592b\u3001\u30d8\u30d3\u306e\u30ad\u30c4\u30cd\u3092\u4f7f\u7528\u3057\u306a\u3044\u3067\u304f\u3060\u3055\u3044\uff1f\u7b54\u3048\u306f\u3044\u3044\u3048\u3067\u3059\u3002\u975e\u5e38\u306b\u6709\u6bd2\u306a\u6bd2\u62bd\u51fa\u306f\u975e\u5e38\u306b\u9762\u5012\u3067\u3042\u308a\u3001\u6700\u3082\u91cd\u8981\u306a\u554f\u984c\u306f\u7bc0\u7d04\u3059\u308b\u3053\u3068\u3067\u3059\u3001\u3088\u304f\u4fdd\u5b58\u3057\u3066\u3001\u79c1\u306f\u6575\u5168\u4f53\u3067\u306f\u306a\u304f\u3001\u81ea\u5206\u306e\u5074\u3067\u306f\u306a\u304f\u3001\u6bd2\u3067\u3044\u3063\u3071\u3044\u3067\u3001</p><p>\u306a\u305c\u4eba\u6c17\u306e\u9ad8\u3044\u30a2\u30d7\u30ea\u30b1\u30fc\u30b7\u30e7\u30f3\u306e\u6b74\u53f2\u306e\u4e2d\u3067\u3001\u30a2\u30b3\u30ca\u30a4\u30c8\u306e\u6709\u6bd2\u306a\u77e2\u306f\u3042\u308a\u307e\u305b\u3093\u3067\u3057\u305f\u304b\uff1f\u8907\u96d1\u306a\u751f\u7523\u306e\u3086\u3063\u304f\u308a\u3057\u305f\u52b9\u529b\u3001\u4f4e\u30b3\u30b9\u30c8\u3002\u79c1\u305f\u3061\u306f\u79e6\u30b0\u30eb\u30fc\u30d7\u306e\u7a74\u306b\u30c6\u30e9\u30b3\u30c3\u30bf\u306e\u6226\u58eb\u3068\u99ac\u3092\u898b\u3066\u3044\u307e\u3059\u3002\u3059\u3079\u3066\u304c\u91ce\u86ee\u3067\u3059\u306e\u3067\u3001\u53e4\u4ee3\u306e\u77e2\u306e\u5916\u50b7\u306f\u50b7\u5bb3\u306b\u3088\u3063\u3066\u5f15\u304d\u8d77\u3053\u3055\u308c\u305f\u6bd2\u3088\u308a\u3082\u3001\u6bd2\u3092\u5f85\u305f\u305a\u306b\u3001\u5916\u50b7\u3068\u5207\u65ad\u6b7b</p><p>\u3082\u3061\u308d\u3093\u3001\u305d\u308c\u306f\u5c11\u3057\u5acc\u306b\u306a\u308b\u3068\u8a00\u3046\u6700\u3082\u91cd\u8981\u306a\u7406\u7531\u306e\u4e00\u3064\u304c\u3042\u308a\u307e\u3059\u3002</p><p>\u53e4\u4ee3\u306e\u5f13\u90e8\u306f\u3001\u3057\u3070\u3057\u3070 \"\u91d1\u306e\u30b8\u30e5\u30fc\u30b9\"\u3001\u3059\u306a\u308f\u3061\u3001\u7cde\u3068\u6226\u3063\u305f\u3002\u53e4\u4ee3\u306e\u6d88\u6bd2\u306e\u6709\u52b9\u306a\u624b\u6bb5\u306f\u306a\u304f\u3001\u77e2\u306f\u5c3f\u3067\u6c5a\u308c\u3066\u3044\u308b\u306e\u3067\u3001\u77e2\u306e\u8ca0\u50b7\u8005\u306f\u7d30\u83cc\u306b\u3088\u3063\u3066\u611f\u67d3\u3057\u3001\u4f55\u5ea6\u3082\u77e2\u50b7\u5bb3\u3067\u6b7b\u4ea1\u3057\u306a\u304b\u3063\u305f\u304c\u3001\u7834\u50b7\u98a8\u3067\u6b7b\u4ea1\u3057\u305f\u3002\u3053\u308c\u306f\u660e\u3089\u304b\u306b\u6bd2\u3088\u308a\u306f\u308b\u304b\u306b\u9ad8\u901f\u3067\u3059\u3002</p><p>\u30ad\u30fc\u306f\u6301\u3063\u3066\u3044\u308b\u3068 \"\u30b4\u30fc\u30eb\u30c7\u30f3\u30b8\u30e5\u30fc\u30b9\"\u3067\u3042\u308a\u3001\u610f\u56f3\u7684\u306b\u4fdd\u5b58\u3092\u6301\u3063\u3066\u3044\u306a\u3044\u3002\u4e2d\u4e16\u306e\u82f1\u56fd\u306e\u5f13\u5175\u306f\u3001\u571f\u306e\u4e2d\u306b\u633f\u5165\u3055\u308c\u305f\u30a2\u30fc\u30c1\u30a7\u30ea\u30fc\u306e\u77e2\u306e\u524d\u306b\u3001\u539f\u5247\u3068 \"\u9ec4\u91d1\u306e\u30b8\u30e5\u30fc\u30b9\"\u306f\u307b\u3068\u3093\u3069\u3001\u3044\u304f\u3064\u304b\u306e\u9306\u3073\u305f\u77e2\u5370\u3092\u6301\u3063\u3066\u3044\u308b\u3057\u3001\u3088\u308a\u591a\u304f\u306e\u67d3\u8272\u7d30\u83cc\u3092\u3001\u81f4\u547d\u7684\u306a\u5272\u5408\u3092\u5897\u52a0\u3055\u305b\u308b\u3053\u3068\u3067\u3059\u3002</p><p>\u660e\u3089\u304b\u306b\u3001\u53e4\u4ee3\u306e\u5f13\u77e2\u306f\u6bd2\u306e\u77e2\u306e\u5927\u898f\u6a21\u306a\u4f7f\u7528\u3092\u4f7f\u7528\u3057\u3066\u3044\u307e\u305b\u3093\u3067\u3057\u305f\u304c\u3001\u3088\u308a\u4fbf\u5229\u306a \"\u9ec4\u91d1\u306e\u30b8\u30e5\u30fc\u30b9\"\u306e\u77e2\u5370\u3092\u4f7f\u7528\u3057\u3066\u3001\u8133\u306e\u7a74\u3092\u958b\u304f\u65b9\u6cd5\u3001\u91d1\u306e\u75db\u307f\u306e\u85ac\u306e\u540d\u524d\u306f\u3001</p>", "cate": "\u6b74\u53f2", "title_trans": "\u306a\u305c\u53e4\u4ee3\u306e\u5f13\u77e2\u306f\u6709\u6bd2\u306a\u77e2\u3092\u4f7f\u7528\u3057\u305f\u306e\u3067\u3059\u304b\uff1f\u7406\u7531\u306f\u5b9f\u969b\u306b\u306f\u975e\u5e38\u306b\u7c21\u5358\u3067\u3059", "title": "\u306a\u305c\u53e4\u4ee3\u306e\u5f13\u77e2\u306f\u6709\u6bd2\u306a\u77e2\u3092\u4f7f\u7528\u3057\u305f\u306e\u3067\u3059\u304b\uff1f\u7406\u7531\u306f\u5b9f\u969b\u306b\u306f\u975e\u5e38\u306b\u7c21\u5358\u3067\u3059"}